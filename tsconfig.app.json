{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "vue",
    "allowSyntheticDefaultImports": true,
    // "experimentalDecorators": true,
    // "useDefineForClassFields": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
